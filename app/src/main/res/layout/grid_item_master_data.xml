<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:id="@+id/idOuterRelLayout">

    <RelativeLayout
        android:id="@+id/idImage"
        android:layout_width="wrap_content"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/pro_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:foreground="@drawable/badge_soldout"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:text="Test"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/idLabel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/idImage"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/like_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_like"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/txt_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/like_image"
            android:layout_alignBaseline="@+id/like_image"
            android:textColor="@android:color/darker_gray"
            android:textSize="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="1dp"
            android:text="AS" />

        <ImageView
            android:id="@+id/comment_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_comment"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/txt_like"
            android:layout_alignBaseline="@+id/like_image"/>

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/comment_image"
            android:textColor="@android:color/darker_gray"
            android:textSize="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="1dp"
            android:text="XC"
            android:maxLines="1" />


        <TextView
            android:id="@+id/priceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_price"
            android:layout_alignBaseline="@+id/like_image"
            android:gravity="right|end"
            android:textColor="@android:color/darker_gray"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="$ " />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="100"
            android:maxLines="1" />
    </RelativeLayout>


</RelativeLayout>
